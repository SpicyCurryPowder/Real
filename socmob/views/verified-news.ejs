<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>REAL . - Verified News</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>    
        <div class="a-settings">        
            <img src="/images/filter.png">
        </div>
    </header>
    <main>
        <h1 class="location">Your current location</h1>
        <h1 class="address"><img src="/images/Vector.png" alt="">Albert St Brisbane City, QLD 4000</h1>
        <br>
        <h1 class="live">LIVE<span class="reddot"> • </span><span class="update">Update</span></h1>
        <!-- Scrollable Circles for Live Updates -->
        <div class="live-news-container">
            <div class="circle-item">
                <img src="/images/southbank.jpg" alt="Southbank">
                <p>Southbank<span class="reddot"> • </span></p>
            </div>
            <div class="circle-item">
                <img src="/images/Albertstreet.jpg" alt="Albert Street">
                <p>Albert Street<span class="reddot"> • </span></p>
            </div>
            <div class="circle-item">
                <img src="/images/fortitudevalley.jpg" alt="Fortitude Valley">
                <p>Fortitude Valley<span class="reddot"> • </span></p>
            </div>
            <div class="circle-item">
                <img src="/images/koala.jpg" alt="Newstead">
                <p>Woolloongabba<span class="reddot"> • </span></p>
            </div>
            <div class="circle-item">
                <img src="/images/kangroo.jpg" alt="Kangaroo Point">
                <p>Kangaroo Point<span class="reddot"> • </span></p>
            </div>
            <div class="circle-item">
                <img src="/images/city.jpg" alt="West End">
                <p>Brisbane City<span class="reddot"> • </span></p>
            </div>
        </div>
        <h1 class="feed-title">Verified news in your area</h1>
    <div class="news-container">
        <% 
        // Array of profile image URLs
        const profileImages = [
            "/images/profile-1.jpg",
            "/images/profile-2.jpg",
            "/images/profile-3.jpg",
            "/images/profile-4.png",
            "/images/profile-5.png",
            "/images/profile-3.jpg",
        ];

        const userNames = [
        "Alice Johnson", "Bob Smith", "Charlie Adams", 
        "Dana Lee", "Evelyn Harris", "Frank Moore"
        ];
        
        const times = ["1h ago", "2h ago", "3h ago", "4h ago", "5h ago", "6h ago"];
        %>
    
        <% if (Array.isArray(articles) && articles.length > 0) { %>
            <% articles.forEach((article, index) => { 
                const randomImage = profileImages[Math.floor(Math.random() * profileImages.length)];
                const randomName = userNames[index % userNames.length];
                const randomTime = times[index % times.length];
            %>
            
            <article class="news-item">
                <!-- <div class="ribbon verified"></div>
                    Verified
                </div> -->
                <div class="news-top">
                    <div class="profile-pic">
                        <img src="<%= randomImage %>" alt="User Profile Picture <%= index + 1 %>">
                    </div>
                    <span class="user-name"><%= randomName %></span>
                    <span class="dot">•</span>
                    <span class="time"><%= randomTime %></span>
                    <span class="dot">•</span>
                    <span class="verified-news-status">Verified</span>
                </div>

                <div class="news-image">
                    <img src="<%= article.image_url || `https://picsum.photos/seed/${index}/400/200` %>" alt="Article Image <%= index + 1 %>">
                </div>
                <div class="news-content">
                    <h3><%= article.title %></h3>
                    <p><%= article.description %></p>
                    <a href="/source-news" class="verify-btn">
                        Verify
                    </a>
                </div>
            </article>
            <% }) %>
        <% } else { %>
            <p>No verified news articles available at the moment. Please try again later.</p>
        <% } %>
    </div>
    </main>
    <nav class="bottom-nav">
        <a href="/">
            <div class="nav-icon"><img src="/images/Home.png" alt=""></div>
            <span>Home</span>
        </a>
        <a href="/verified-news" class="active">
            <div class="nav-icon-verified"><img src="/images/verify.png" alt=""></div>
            <span>Verified News</span>
        </a>
    </nav>
    <footer></footer>
        <div class="footer-container">
            <p>&copy; 2024 REAL.</p>
            <div class="footer-links">
                <a href="#">Team Curry Powder</a>
            </div>
        </div>
    </footer>
</body>
</html>
