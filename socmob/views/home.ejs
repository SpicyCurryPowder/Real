<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>REAL. - Home</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>REAL. </h1>
        <nav>
            <a href="/" class="active">Home</a>
            <a href="/verified-news">Verified News</a>
            <a href="/liked-news">Sources</a>
        </nav>
    </header>
    <main>
        <h2>Web-scraped News</h2>
        <div class="news-container">
            <% news.forEach(item => { %>
                <div class="news-item">
                    <h3><%= item.title %></h3>
                    <p><%= item.description %></p>
                    <button onclick="toggleLike('<%= item.id %>', '<%= item.title %>', '<%= item.description %>', '<%= item.source %>')" class="like-btn <%= likedNews.some(liked => liked.id === item.id) ? 'liked' : '' %>">
                        <%= likedNews.some(liked => liked.id === item.id) ? 'Unlike' : 'Like' %>
                    </button>
                </div>
            <% }); %>
        </div>
    </main>
    <script src="/script.js"></script>
</body>
</html>